<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gray_background"
    tools:context=".RegisterActivity2">

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"/>
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="34dp"
            android:layout_height="120dp"
            android:src="@drawable/profile"
            app:civ_border_width="2dp"
            app:civ_border_color="#000000"/>
    </FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="        For new group ID preess here --> "
            android:textStyle="bold"
            android:textColor="#EB2F2F"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/button_get_id"
            android:layout_width="70dp"
            android:layout_gravity="center_vertical"
            android:layout_height="30dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:text="GET ID"
            android:textSize="13dp"/>

    </LinearLayout>
<EditText
    android:id="@+id/register_group_id"
    android:layout_width="350dp"
    android:layout_height="50dp"
    android:ems="10"
    android:hint="Group ID..."
    android:layout_gravity="center_horizontal"
    android:background="@drawable/inputs"
    android:padding="10dp"
    android:layout_marginVertical="6dp"
    android:drawableLeft="@drawable/group_id"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="   "
        android:textColor="#000000"
        android:textSize="23sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="  Please select your company role"
        android:drawableLeft="@drawable/work"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="23sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Pay attention! there is only one manager!"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#3E3E3E"
        android:textSize="15sp"/>

        <Spinner
            android:id="@+id/spinnerRole"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginVertical="6dp"
            android:hint="Company role..." />

        <EditText
            android:id="@+id/register_company_role"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:hint="Company role..."
            android:layout_gravity="center_horizontal"
            android:inputType="textEmailAddress"
            android:background="@drawable/inputs"
            android:padding="10dp"
            android:layout_marginVertical="6dp"
            android:drawableLeft="@drawable/work"/>

    <Button
    android:id="@+id/register_finish"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_gravity="center_horizontal"
    android:text="Finish"
    android:background="@drawable/button"
    android:textColor="@color/white"
    android:layout_marginVertical="6dp"
    android:padding="15dp"/>

</LinearLayout>