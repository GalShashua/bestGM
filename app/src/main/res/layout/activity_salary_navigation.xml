<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDE9E9"
    tools:context=".SalaryNavigation">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="12dp"
        android:fontFamily="sans-serif-condensed"
        android:text="SALARY"
        android:textColor="#000000"
        android:textSize="50dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your salary goal for this month :"
        android:textColor="#514848"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/edit_text_max_salary"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/apply_max_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ok">
    </Button>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        ></TextView>
    <Button
        android:id="@+id/buttonAddMoney"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:text="Add Money to my shifts" />

</LinearLayout>